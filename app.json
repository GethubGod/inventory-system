{
  "expo": {
    "name": "Babytuna",
    "slug": "babytuna",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/babytuna-logo-icon.png",
    "scheme": "babytuna",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/babytuna-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#F97316"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.babytuna.inventory",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera access is required to scan QR codes.",
        "NSMicrophoneUsageDescription": "Microphone access is required to record video."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/babytuna-logo-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.babytuna.inventory"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/babytuna-logo-icon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "@react-native-community/datetimepicker",
      [
        "expo-camera",
        {
          "cameraPermission": "Camera access is required to scan QR codes.",
          "microphonePermission": "Microphone access is required to record video."
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "NFC access is required to scan tags."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
