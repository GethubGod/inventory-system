{
  "expo": {
    "name": "Babytuna Systems",
    "slug": "babytuna-systems",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "babytunasystems",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.babytuna.systems",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Camera access is required to scan QR codes.",
        "NSMicrophoneUsageDescription": "Microphone access is needed for voice ordering.",
        "NSSpeechRecognitionUsageDescription": "Speech recognition is needed for voice ordering.",
        "NSPhotoLibraryUsageDescription": "Photo library access is needed to update your profile photo.",
        "NFCReaderUsageDescription": "NFC access is required to scan tags."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.babytuna.systems",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.NFC",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.NFC"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/app-icon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      "@react-native-community/datetimepicker",
      [
        "expo-camera",
        {
          "cameraPermission": "Camera access is required to scan QR codes."
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "NFC access is required to scan tags."
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Microphone access is needed for voice ordering.",
          "speechRecognitionPermission": "Speech recognition is needed for voice ordering."
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fd32384c-3175-4fef-81b4-1321513b386e"
      }
    },
    "runtimeVersion": "1.0.0",
    "owner": "gethubgod",
    "updates": {
      "url": "https://u.expo.dev/fd32384c-3175-4fef-81b4-1321513b386e"
    }
  }
}
